<odoo>
  <data>

    <record id="custom_crm_lead_search_opportunity" model="ir.ui.view">
      <field name="name">crm.lead.search.opportunity</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
      <field name="arch" type="xml">

        <!-- Insertar dentro del SEARCH del template -->
        <xpath expr="//search" position="inside">


          <filter name="area_patrimoniales"
                  string="Patrimoniales"
                  domain="[('area_id.n ame', '=', 'Patrimoniales')]"/>
          <filter name="area_financieros"
                  string="Financieros"
                  domain="[('area_id.name', '=', 'Financieros')]"/>
          <filter name="area_humanos"
                  string="Humanos"
                  domain="[('area_id.name', '=', 'Humanos')]"/>
          <filter name="area_masivos"
                  string="Masivos"
                  domain="[('area_id.name', '=', 'Masivos')]"/>

        </xpath>

      </field>
    </record>

  </data>
</odoo>