<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_form_hide_field_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.hide.field.inherit</field>
        <field name="model">crm.lead</field>

        <field name="inherit_id" ref="crm.crm_lead_view_form"/>

        <field name="arch" type="xml">
            <xpath expr="//div[@class='col-auto'][div[@id='probability']]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//span[@class='oe_grey p-2' and @groups='!crm.group_use_recurring_revenues']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
