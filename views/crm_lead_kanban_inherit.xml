<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_kanban_add_field_inherit" model="ir.ui.view">
        <field name="name">crm.lead.kanban.add.field.inherit</field>
        <field name="model">crm.lead</field>

        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='expected_revenue']" position="after">
                <div>
                    <span>Comisión: </span>
                    <field name="estimated_commission"/>
                    <span>%</span>
                </div>
                <div>
                    <span>Comisión Anual: </span>
                    <field name="annual_commission"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
